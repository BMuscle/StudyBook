= @note.title
%br
= @note.text
%br

- if params[:my_list_id].present?
  - @my_list_notes.each do |m|
    %button{type: "button", class:'btn', onclick: "changePage(#{m.note_id},#{m.my_list_id},#{m.index})"}
      = m.title
    %br

  - if params[:index].to_i > 0
    %button{type: "button", class:'btn', onclick: "changeIndex(#{params[:my_list_id]},#{params[:index]},false)"}
      before

  - if @my_list_notes.find_by(index: params[:index].to_i + 1).present?
    %button{type: "button", class:'btn', onclick: "changeIndex(#{params[:my_list_id]},#{params[:index]},true)"}
      next



  