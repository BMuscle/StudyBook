.user.row
  .col-1{ style: 'user-select: none' }
  .user__left-box.col-3
    - if current_user.image.attached?
      .user__image{ style: "background-image: url(#{rails_blob_path(current_user.image)})" }
    - else
      .user__image
    .user__name
      = @user.nickname
    .user__profile
      = link_to "プロフィール編集", edit_user_path, class: "btn btn-success"
  .user__main-box.col-7
    .user__header
      .user__header-box.mr-2
        = link_to user_notes_path(user_nickname: current_user.nickname), class: "" do
          .user__header-link
            = t '.notes'
      .user__header-box
        = link_to user_my_lists_path(user_nickname: current_user.nickname), class: "" do
          .user__header-link
            = t '.my_lists'
    .user__body
      .user__study-graph.overflow-auto
        %canvas#user_study_graph{ data: { graph: @user_monthly_study_length.join(',') }}
