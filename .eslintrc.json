{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": "error",
    "no-extra-semi": "warn",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "space-before-blocks": ["error", { "functions": "always" }]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  },
  "globals": {
    "window": false
  }
}
